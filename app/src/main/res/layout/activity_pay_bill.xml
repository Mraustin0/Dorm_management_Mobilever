<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:text="แจ้งโอนเงิน"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rl_header"
        app:layout_constraintBottom_toTopOf="@id/btn_next">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Bank Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="โอนผ่านบัญชีธนาคาร" android:textColor="#333333" android:textSize="12sp"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                        <ImageView
                            android:id="@+id/iv_bank_logo"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_gallery" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/iv_bank_logo"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ธนาคารกสิกรไทย" android:textStyle="bold" android:textColor="#333333"/>
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                <TextView android:id="@+id/tv_acc_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="เลขบัญชี 001-443-5771" android:textColor="#666666"/>
                                <ImageView android:id="@+id/btn_copy_acc" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="8dp" android:src="@android:drawable/ic_menu_save" />
                            </LinearLayout>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ชื่อบัญชี golden key2" android:textColor="#666666"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@android:drawable/ic_menu_crop" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Amount Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="ยอดโอน" android:textColor="#333333" android:textStyle="bold"/>
            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_edittext_bg"
                android:padding="12dp"
                android:text="6064 บาท"
                android:enabled="false"
                android:gravity="end" />

            <!-- Upload Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="อัพโหลดหลักฐานการชำระเงิน" android:textColor="#333333" android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_select_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F8F9FA">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_preview"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_upload" />
                    <TextView
                        android:id="@+id/tv_upload_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="เลือกไฟล์รูป\nที่ต้องการอัพโหลด"
                        android:gravity="center"
                        android:textColor="#333333"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:backgroundTint="#2E4A88"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
