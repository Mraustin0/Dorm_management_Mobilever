<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header_move_out_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แจ้งย้ายออกห้อง 103"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/layout_actions"
        app:layout_constraintTop_toBottomOf="@id/layout_header_move_out_process">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ข้อมูลผู้เช่า -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ข้อมูลผู้เช่า"
                android:textColor="#000000"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="ชื่อ-สกุล:" android:textColor="#888888" />
                        <TextView android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:textColor="#000000" android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                        <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="เบอร์โทร:" android:textColor="#888888" />
                        <TextView android:id="@+id/tv_user_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ข้อมูลการชำระเงิน -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ข้อมูลการชำระเงิน"
                android:textColor="#000000"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ยอดค้างชำระ" android:textSize="12sp" />
                    <EditText
                        android:id="@+id/et_pending_amount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_edittext_bg"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="12dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="เงินประกัน/เงินมัดจำ" android:textSize="12sp" />
                    <EditText
                        android:id="@+id/et_deposit_amount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_edittext_bg"
                        android:hint="5000.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="12dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="ค่าเสียหาย (ถ้ามี)" android:textSize="12sp" />
                    <EditText
                        android:id="@+id/et_damage_fee"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_edittext_bg"
                        android:hint="กรุณากรอกค่าเสียหาย"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="12dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="ยอดรวมที่ต้องคืน" android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_total_refund"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#F5F5F5"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:text="0.00"
                        android:textColor="#2E7D32"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Actions -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E53935"
            android:text="ปฏิเสธ"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_approve"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#4A90E2"
            android:text="อนุมัติ"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>