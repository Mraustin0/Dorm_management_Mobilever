<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/shape_circle_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="คุณ Tzoey ห้อง 201"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image" />

    <!-- Menu List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_name">

        <!-- แก้ไขข้อมูลส่วนตัว -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="18dp">
                <ImageView android:id="@+id/ic1" android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_myplaces" app:tint="#333333"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@id/ic1" android:layout_marginStart="16dp" android:layout_centerVertical="true" android:text="แก้ไขข้อมูลส่วนตัว" android:textColor="#333333" android:textSize="15sp"/>
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_media_next" app:tint="#888888"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- เปลี่ยนรหัสผ่าน -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="18dp">
                <ImageView android:id="@+id/ic2" android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_lock_lock" app:tint="#333333"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@id/ic2" android:layout_marginStart="16dp" android:layout_centerVertical="true" android:text="เปลี่ยนรหัสผ่าน" android:textColor="#333333" android:textSize="15sp"/>
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_media_next" app:tint="#888888"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- เอกสารและสัญญาเช่า -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="18dp">
                <ImageView android:id="@+id/ic3" android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#333333"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@id/ic3" android:layout_marginStart="16dp" android:layout_centerVertical="true" android:text="เอกสารและสัญญาเช่า" android:textColor="#333333" android:textSize="15sp"/>
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_media_next" app:tint="#888888"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- แจ้งย้ายออก -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_move_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="18dp">
                <ImageView android:id="@+id/ic4" android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_dialog_map" app:tint="#333333"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@id/ic4" android:layout_marginStart="16dp" android:layout_centerVertical="true" android:text="แจ้งย้ายออก" android:textColor="#333333" android:textSize="15sp"/>
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_media_next" app:tint="#888888"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- ออกจากระบบ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="18dp">
                <ImageView android:id="@+id/ic5" android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_lock_power_off" app:tint="#333333"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@id/ic5" android:layout_marginStart="16dp" android:layout_centerVertical="true" android:text="ออกจากระบบ" android:textColor="#333333" android:textSize="15sp"/>
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_media_next" app:tint="#888888"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
