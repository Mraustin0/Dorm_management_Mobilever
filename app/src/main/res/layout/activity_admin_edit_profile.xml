<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/btn_back_edit_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="แก้ไขข้อมูลส่วนตัว"
        android:textColor="#1A1A2E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back_edit_profile" />

    <!-- Profile Picture Section -->
    <FrameLayout
        android:id="@+id/fl_profile_pic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back_edit_profile">

        <!-- Profile Image (circle) -->
        <ImageView
            android:id="@+id/iv_edit_profile_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@drawable/ic_person"
            android:padding="22dp"
            app:tint="@color/white" />

        <!-- Camera overlay button -->
        <FrameLayout
            android:id="@+id/btn_pick_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bg_camera_button"
            android:elevation="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_scan"
                app:tint="#FFFFFF" />
        </FrameLayout>
    </FrameLayout>

    <!-- Upload progress indicator -->
    <ProgressBar
        android:id="@+id/progress_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_profile_pic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_profile"
        app:layout_constraintTop_toBottomOf="@id/progress_upload">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp">

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Username"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="14sp" />

            <!-- First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อ"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_first_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="ชื่อ"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="14sp" />

            <!-- Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นามสกุล"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="นามสกุล"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="14sp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="14sp" />

            <!-- Tel -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรศัพท์"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_tel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="เบอร์โทรศัพท์"
                android:inputType="phone"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit_profile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2D5496"
        android:text="บันทึก"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
