<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="#FFFFFF">

    <!-- Admin Icon -->
    <ImageView
        android:id="@+id/iv_notif_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/shape_circle_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Text Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/tv_notif_time"
        app:layout_constraintStart_toEndOf="@id/iv_notif_icon"
        app:layout_constraintTop_toTopOf="@id/iv_notif_icon">

        <TextView
            android:id="@+id/tv_notif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADMIN1"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_notif_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="2dp"
            android:text="แอดมินได้ส่งร่างสัญญาฉบับที่ 2 ให้คุณแล้ว..."
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Time -->
    <TextView
        android:id="@+id/tv_notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1m ago."
        android:textColor="#888888"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
