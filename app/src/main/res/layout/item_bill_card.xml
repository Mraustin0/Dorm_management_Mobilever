<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Toggle Header -->
        <RelativeLayout
            android:id="@+id/btn_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_bill_month_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บิลประจำเดือน เมษายน 2026"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/iv_chevron"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_down_gg" />
        </RelativeLayout>

        <!-- Expandable Content -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Bill Summary Area -->
            <LinearLayout
                android:id="@+id/layout_summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/btn_pay"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_bill_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ยอดค่าบริการ เดือนเมษายน 2026"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_bill_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6,064.00 บาท"
                            android:textColor="#E53935"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_bill_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="เกินกำหนดชำระ 5 พ.ค. 2026"
                            android:textColor="#E53935"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#E53935"
                        android:text="จ่ายเลย"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:cornerRadius="25dp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Usage Details -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ข้อมูลการใช้งาน"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- ค่าเช่าห้อง -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ค่าเช่าห้อง"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:id="@+id/tv_room_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="4,800 บาท"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- ค่าไฟฟ้า -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ค่าไฟฟ้า"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:id="@+id/tv_electric_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- ค่าน้ำ -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ค่าน้ำ"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:id="@+id/tv_water_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- เพิ่มเติม -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เพิ่มเติม"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:id="@+id/tv_other_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- รวม -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รวม"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="-"
                    android:textColor="#E53935"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>